{
  "useConfigFiles": true,
  "router": false,
  "vuex": false,
  "cssPreprocessor": "less",
  "plugins": {
    "@vue/cli-plugin-babel": {},
    "@vue/cli-plugin-eslint": {
      "config": "standard",
      "lintOn": [
        "save",
        "commit"
      ]
    }
  },
  "configs": {
    "postcss": {
      "plugins": {
        "postcss-normalize": {
          "forceImport": true
        }
      }
    },
    "eslintConfig": {
      "rules": {
          "indent": ["error", 4]
      }
    },
    "browserslist": [
      "> 1%",
      "last 2 versions",
      "not ie <= 8",
      "android >= 4",
      "ios >= 8"
    ]
  }
}